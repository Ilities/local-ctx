{
  "name": "@ilities/local-ctx",
  "version": "0.4.2",
  "description": "An MCP utility to enable local servers to be exposed to standard clients with OAuth",
  "type": "module",
  "bin": {
    "local-ctx": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node esbuild.js",
    "start": "tsx src/index -c config.json",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "jose": "^6.0.12",
    "pino": "^9.7.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.18",
    "@types/prettier": "^2.7.3",
    "@types/yargs": "^17.0.33",
    "esbuild": "^0.25.8",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
